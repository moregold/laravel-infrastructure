{
    "name": "moregold/laravel-infrastructure",
    "type": "library",
    "description": "Additional abstractions and helpers for moregold's backend APIs",
    "keywords": [
        "moregold",
        "laravel-infrastructure"
    ],
    "homepage": "https://github.com/moregold/laravel-infrastructure",
    "license": "proprietary",
    "authors": [
        {
            "name": "Moregold Engineering",
            "email": "",
            "homepage": "",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.5|~7.0",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0|~5.0",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "~2.3",
        "codeception/mockery-module": "*",
        "codeception/codeception": "^2.2",
        "illuminate/support": "~5.1|~5.2"
    },
    "autoload": {
        "psr-4": {
            "Moregold\\Infrastructure\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Moregold\\Infrastructure\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
